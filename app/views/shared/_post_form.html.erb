<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title %>
    <div id="editor-button-bar"></div>
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    <div id="editor-preview"></div>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
